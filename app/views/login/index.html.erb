<div class="container-fluid bg_color">
    <div class="row">
        <div class="col-2"></div>
            <div class="col-8 bg-white p-5">
                <% flash.each do |message_type, message| %>
                    <div class="alert alert-<%= message_type %>"><%= message %></div>
                <% end %>
                <%= form_for(:session, url: login_path) do |f| %>
                    <h5 class="text-center mb-5">ログイン</h5>
                    <div class="form-group">
                    <%= f.text_field :mail, class: "form-control mx-auto d-block", style: "width:30rem;",placeholder: "メールアドレス" %>
                    <%= f.password_field :password, class: "form-control mx-auto d-block mt-1", style: "width:30rem;",placeholder: "パスワード" %>
                    </div>
                    <%= submit_tag("ログイン", class: "btn btn-danger mx-auto d-block w-50 mt-5")%>   
                <% end %>  
                <hr>    
                <a href="add_user" class="btn btn-primary mx-auto d-block w-50 m-3">新規登録</a>
            </div>
        <div class="col-2"></div>    
    </div>
    <div class="row">
    <br><br><br><br><br><br><br><br><br>
    </div>
</div>